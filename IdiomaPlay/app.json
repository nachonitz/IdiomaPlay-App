{
  "expo": {
    "name": "IdiomaPlay",
    "slug": "IdiomaPlay",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo_white.png",
    "splash": {
      "image": "./assets/logo_white.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo_white.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/logo_white.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/logo_white_small.png",
          "color": "#3da6c7"
        }
      ]
    ]
  }
}
